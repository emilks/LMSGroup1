@model IEnumerable<MainCourseIndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<div class="accordion" id="accordionExample">
    @{
        int i = 0;
    }
    @foreach (var item in Model)
    {
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading_@i">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="true" aria-controls="collapseOne">

                    @Html.DisplayFor(modelItem => item.Name)
                </button>
            </h2>
            <div id="collapse_@i" class="accordion-collapse collapse show" aria-labelledby="headingOne">
                <div class="accordion-body">
                    <strong>@Html.DisplayFor(modelItem => item.Description)</strong>
                    <br>
                    <strong>Moduler:</strong><br>
                    @foreach (var modul in item.Modules)
                    {
                        <div>
                            @Html.DisplayFor(modelItem => modul.Name)
                            <span> - </span>
                            @Html.DisplayFor(modelItem => modul.Description)
                        </div>
                    }

                </div>
            </div>
        </div>
        i++;
    }
</div>


