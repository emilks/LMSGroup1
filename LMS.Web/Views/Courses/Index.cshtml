@model IEnumerable<MainCourseIndexViewModel>

<h1>Kurser</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Lägg till kurs</a><br />

    <a asp-controller="Courses" asp-action="DetailedView">Kursmodul ADMIN</a>@*endast länk för framtagande av modulen*@
</p>


<div class="collapse multi-collapse" id="CreateCoursePartial">
    <div class="card card-body">
        Some placeholder content for the second collapse component of this multi-collapse example. This panel is hidden by default but revealed when the user activates the relevant trigger.
    </div>
</div>



<div class="container shadow min-vh-100 py-2">
    <div class="table-responsive">
        <table class="table accordion">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kurs</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var item in Model)
                {
                    <tr >
                        <th scope="row">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Öppna</a> 
                            <i class="bi bi-chevron-down"></i>
                        </th>
                        <td data-bs-toggle="collapse" data-bs-target="#r_@i">@Html.DisplayFor(modelItem => item.Name)</td>
                        <td data-bs-toggle="collapse" data-bs-target="#r_@i"></td>
                        <td data-bs-toggle="collapse" data-bs-target="#r_@i"></td>
                        <td data-bs-toggle="collapse" data-bs-target="#r_@i">@Html.DisplayFor(modelItem => item.StartDate)</td>
                    </tr>
                    <tr class="collapse accordion-collapse" id="r_@i" data-bs-parent=".table">
                        <td></td>
                        <td colspan="4">
                            @Html.DisplayFor(modelItem => item.Description)
                            <br>
                            <strong>Moduler:</strong><br>
                            @foreach (var modul in item.Modules)
                            {
                                <div>
                                    <div class="bg-light d-flex justify-content-between">
                                        <div>
                                            @Html.DisplayFor(modelItem => modul.Name)
                                        </div>
                                        <div>
                                            @{
                                                string sdate = modul.StartDate.ToString("d");
                                                string edate = modul.EndDate.ToString("d");
                                            }
                                            @Html.DisplayFor(modelItem => sdate)
                                            <span> - </span>
                                            @Html.DisplayFor(modelItem => edate)
                                        </div>
                                    </div>
                                    <div>
                                        @Html.DisplayFor(modelItem => modul.Description)
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>   
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>



<div class="accordion" id="accordionExample">
    @{
        i = 0;
    }
    @foreach (var item in Model)
    {
    <div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="heading_@i">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@i" aria-expanded="true" aria-controls="collapseOne">
                    @Html.DisplayFor(modelItem => item.Name)
                </button>
            </h2>
            <div id="collapse_@i" class="accordion-collapse collapse
                    @(DateTime.Now > item.StartDate && DateTime.Now < item.EndDate?"show":"")" aria-labelledby="headingOne">
                <div class="accordion-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Öppna</a>
                        </div>
                    </div>
                    <br>
                    <strong>Moduler:</strong><br>
                    @foreach (var modul in item.Modules)
                    {
                        <div>
                            <div class="bg-light d-flex justify-content-between">
                                <div>
                                    @Html.DisplayFor(modelItem => modul.Name)
                                </div>
                                <div>
                                    @{
                                        string sdate = modul.StartDate.ToString("d");
                                        string edate = modul.EndDate.ToString("d");
                                    }
                                    @Html.DisplayFor(modelItem => sdate)
                                    <span> - </span>
                                    @Html.DisplayFor(modelItem => edate)
                                </div>
                            </div>
                            <div>
                                @Html.DisplayFor(modelItem => modul.Description)
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        </div>
        i++;
    }
</div>


