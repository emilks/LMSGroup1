@page
@model LoginModel


<div class="row">
    <div class="col-5"></div>
    <div class="col-md-2">
        <section>
            <form id="account" method="post">
                <h2>Logga in på ditt konto</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox mt-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Logga in</button>
                </div>
                <div>
                    <p class="mt-3">
                        <a class="blacknav" id="forgot-password" asp-page="./ForgotPassword">Glömt lösenord?</a>
                    </p>
                    <p class="mt-3">
                        <a class="blacknav" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Skicka om verifikations email</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
