@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3 class="mt-3">Ta bort personlig data och konto</h3>

<div class="row">
    <div class="col-md-6 aligncenter">
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Genomförande av detta leder till att din information och ditt konto permanent kommer tas bort.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label class="form-label">Lösenord</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="w-50 btn btn-lg btn-danger centerbutton mt-3" type="submit">Ta bort data och stäng konto</button>
    </form>
</div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
